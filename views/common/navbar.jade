mixin navbar(user)
    nav.navbar.navbar-expand.navbar-light.bg-light
        a(href="/", aria-label="Golden Goose").navbar-brand.mr-0
            div(href="/").mr-md-2
                img(src="/images/chat_logo.png", width="36", height="36")
        .collapse.navbar-collapse    
            ul.navbar-nav.mr-auto
                li.nav-item.active
                    a.nav-link(href="/") Home
                li.nav-item.active
                    if user
                        a.nav-link(href="/messages") Messages
            if user
                .navbar-right
                    .navbar-text Hello 
                        a(href="/account/" + user.email) #{user.email}
                .navbar-right
                    ul.navbar-nav.mr-auto    
                        li.nav-item.active
                            a.nav-link(href="/logout") Logout
            else
                .navbar-right
                    ul.navbar-nav.mr-auto
                        li.nav-item.active
                            a.nav-link(href="/login") Login
                        li.nav-item.active
                            a.nav-link(href="/signup") Sign Up

                
                