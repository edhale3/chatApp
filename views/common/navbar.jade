            div(href="/").mr-md-2
                img(src="/images/chat_logo.png", width="36", height="36")
        .collapse.navbar-collapse
            ul.navbar-nav.mr-auto
                li.nav-item.active
                    a.nav-link(href="/") Home
                li.nav-item.active
