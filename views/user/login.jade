html(lang="en")
    include ../common/head.jade
    +head("Sign Up Here")
    body
        block content
            header 
                include ../common/navbar.jade
                +navbar()
                .container
                    .row
                        .col-sm-12.offset-md-2.col-md-8(id="chatbox")
                            .jumbotron
                                h2.text-center Sign Into Your Account
                                .row
                                    .col-sm-12.col-md-12
                                        form(action='/signup', method='POST')
                                            div.formgroup
                                                label.small.mb-1.mt-3 Username:
                                                input(placeholder='Email', required=true,
                                                name='email', type='email', value='').form-control
                                                div= "\n"
                                                label.small.mb-1.mt-3 Password:
                                                input(placeholder="Password", required=true,
                                                name='password', type= 'password', value='').form-control
                                                button.mt-3.btn.btn-primary(type='submit') Sign In
                                                p.mt-2.mb-0 Don't have an account? #[a(href="/signup") Sign up here]
                include ../common/footer.jade
                +footer()