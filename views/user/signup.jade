html(lang="en")
    include ../common/head.jade
    +head("Sign Up Here")
    body
        block content
            header 
                include ../common/navbar.jade
                +navbar()
                .container
                    .row
                        .col-sm-12.offset-md-2.col-md-8(id="chatbox")
                            .jumbotron
                                h2.text-center Create Chatster Account!
                                .row
                                    .col-sm-12.col-md-12
                                        form(action='/signup', method='POST')
                                            div.formgroup
                                                label.small.mb-1.mt-3 Username:
                                                input(placeholder='Enter an email address', required=true,
                                                name='email', type='email', value=formData.email).form-control
                                                div= "\n"
                                                if(errors && errors.email)
                                                    p.small.text-danger #{errors.email}
                                                label.small.mb-1.mt-3 Password:
                                                input(placeholder="Enter password", required=true,
                                                name='password', type= 'password', value='').form-control
                                                if(errors && errors.password)
                                                    p.small.text-danger #{errors.password}
                                                button.mt-3.btn.btn-primary(type='submit') Sign Up
                                                p.mt-2.mb-0 Already have an account? #[a(href="/login") Log in here]
                include ../common/footer.jade
                +footer()